<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/start_kamino_data">

    <fragment android:id="@+id/start_kamino_data"
              android:name="com.example.zumer.kamino.fragments.StartKaminoDataFragment"
              android:label="fragment_start_kamino_data"
              tools:layout="@layout/fragment_start_kamino_data">
        <action
                android:id="@+id/action_start_kamino_data_to_kamino_big_pic"
                app:destination="@id/kamino_big_pic"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
                android:id="@+id/action_start_kamino_data_to_residents_list"
                app:destination="@id/residents_list"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
            android:id="@+id/kamino_big_pic"
            android:name="com.example.zumer.kamino.fragments.KaminoBigPicFragment"
            android:label="fragment_kamino_big_pic"
            tools:layout="@layout/fragment_kamino_big_pic"/>
    <fragment
            android:id="@+id/residents_list"
            android:name="com.example.zumer.kamino.fragments.ResidentsListFragment"
            android:label="fragment_residents_list"
            tools:layout="@layout/fragment_residents_list">
        <action
                android:id="@+id/action_residents_list_to_resident_details"
                app:destination="@id/resident_details"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
            android:id="@+id/resident_details"
            android:name="com.example.zumer.kamino.fragments.ResidentDetailsFragment"
            android:label="fragment_resident_details"
            tools:layout="@layout/fragment_resident_details"/>
</navigation>