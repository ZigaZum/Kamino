<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.StartKaminoDataFragment">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_small_pic_start_fragment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:tooltipText="picture" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rotation_period_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Rotation period"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_orbital_period_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Orbital period" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/iv_residentslist_start_fragment"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_diameter_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Diameter" app:layout_constraintTop_toBottomOf="@+id/tv_rotation_period_start_fragment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_climate_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Climate"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_residentslist_start_fragment" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_gravity_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Gravity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_diameter_start_fragment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_terrain_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Terrain"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_climate_start_fragment"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_surface_water_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Surface water" app:layout_constraintTop_toBottomOf="@+id/tv_gravity_start_fragment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_population_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Population"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_orbital_period_start_fragment"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_residents_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Residents" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_surface_water_start_fragment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
    />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_residentslist_start_fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_residents_start_fragment"
            android:layout_marginStart="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_small_pic_start_fragment"
            app:layout_constraintHorizontal_bias="0.509"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_likes_start_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="Likes"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>